{
    "manifest_version": 3,
    "name": "Timer Extension",
    "version": "1.0",
    "description": "A timer extension with history ⏲️",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "icon.png",
          "48": "icon.png",
          "128": "icon.png"
        }
      },
      "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["styles.css"],
        "matches": ["https://example.com/*"]
      }
    ]
  }